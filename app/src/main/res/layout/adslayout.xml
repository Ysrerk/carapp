<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CDCBA6"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageviewadsimage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1.2">

    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adsid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example id"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/adstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example title"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>
        <TextView
            android:id="@+id/adsmake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example make"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>
        <TextView
            android:id="@+id/adsmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example model"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/adsprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example price"
            android:gravity="right"
            android:textColor="#00587A"
            android:textSize="15dp"></TextView>

    </LinearLayout>

</LinearLayout>