<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CDCBA6"
    android:orientation="horizontal"
    android:padding="5dp">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fadsid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example id"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/fadstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example title"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>
        <TextView
            android:id="@+id/fadsmake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example make"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>
        <TextView
            android:id="@+id/fadsmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example model"
            android:textColor="#008891"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/fadsprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example price"
            android:gravity="right"
            android:textColor="#00587A"
            android:textSize="15dp"></TextView>

    </LinearLayout>

</LinearLayout>