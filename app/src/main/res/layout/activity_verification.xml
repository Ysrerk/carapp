<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="#27AE60"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".VerificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:textSize="20dp"
        android:layout_marginTop="30dp" android:textStyle="bold|italic"
        android:gravity="center" android:textColor="#4A4E4D"
        android:text="VERIFICATION"></TextView>


    <EditText
        android:id="@+id/vverificationcodeedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" android:textColorHint="#FE8A71" android:textColor="#4A4E4D"
        android:hint="Please Enter Verification Code">

    </EditText>

    <Button
        android:id="@+id/vverifybutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black" android:layout_marginTop="20dp"
        android:text="VERIFY"></Button>

</LinearLayout>